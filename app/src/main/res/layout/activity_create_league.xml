<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="League creater"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#1A751D"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/etLeagueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="League name"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/edit_text"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/etLeagueDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="League description"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/edit_text"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/etLeagueCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="capacity"
                android:textSize="18sp"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/edit_text"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/etAdvancers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Teams advancing"
                android:textSize="18sp"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/edit_text"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/etRelegation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Teams relegated"
                android:textSize="18sp"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/edit_text"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnUploadLogo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="add logo"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#1A751D"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardCornerRadius="1000dp"
                android:layout_marginBottom="5dp"
                >

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/addimage"
                    android:scaleType="fitXY"
                    />


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnCreateLeague"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="create league"
                android:textSize="18sp"
                android:backgroundTint="#1A751D"
                android:layout_marginTop="16dp"
                android:layout_gravity="center" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="#1A751D"
        >

        <Button
            android:id="@+id/btnCreateOpener"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="create"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="2dp"
            android:drawableTop="@drawable/hammer"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/btnCreateTeam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Team"
            android:background="@android:color/transparent"
            android:textSize="10sp"
            android:backgroundTint="#814B4B"
            android:gravity="center"
            android:padding="4dp"
            android:visibility="gone"
            android:drawableTop="@drawable/players"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="League"
            android:backgroundTint="#139017"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/list"
            android:visibility="gone"
            android:id="@+id/btnCreateLeagueTab"
            />

        <Button
            android:id="@+id/btnExplorer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Explorer"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/magnif"
            />

        <Button
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="view"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/view"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/btnMyLeagues"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="My Leagues"
            android:background="@android:color/transparent"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/trophy"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btnMyTeams"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="My Teams"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/shield"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>