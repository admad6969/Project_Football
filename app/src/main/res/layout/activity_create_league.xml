<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="League creater"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="League name"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/etLeagueName"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="League description"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/etLeagueDescription"
                />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="League capacity"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:id="@+id/etLeagueCap"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Teams advancing"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:id="@+id/etAdvancers"
                />



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Teams relegated"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:id="@+id/etRelegation"
                />


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="League logo"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/btnUploadLogo"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:id="@+id/ivLogo"
                />

            <Button
                android:id="@+id/btnCreateLeague"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="upload"
                android:textSize="20sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="#1A751D"
        >

        <Button
            android:id="@+id/btnCreateOpener"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="create"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="2dp"
            android:drawableTop="@drawable/hammer"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/btnCreateTeam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Team"
            android:background="@android:color/transparent"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="4dp"
            android:visibility="gone"
            android:drawableTop="@drawable/players"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="League"
            android:background="@android:color/transparent"
            android:textSize="13sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/list"
            android:visibility="gone"
            android:id="@+id/btnCreateLeagueTab"
            />

        <Button
            android:id="@+id/btnExplorer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Explorer"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/magnif"
            />

        <Button
            android:id="@+id/btnView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="view"
            android:background="@android:color/transparent"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/view"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/btnMyLeagues"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="My Leagues"
            android:background="@android:color/transparent"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/trophy"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btnMyTeams"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="My Teams"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:padding="1dp"
            android:drawableTop="@drawable/shield"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>