<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvRequestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send request to join ?"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tvDialogLeagueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send request to join ?"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tvDialogDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send request to join ?"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tvDialogCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send request to join ?"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tvDialogAdvancers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send request to join ?"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/tvDialogRelegation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send request to join ?"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        />



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/ivDialogLeagueLogo"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnDecline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        />

</LinearLayout>